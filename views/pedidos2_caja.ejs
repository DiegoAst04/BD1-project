<!DOCTYPE html>
<html lang="es-PE">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pedidos y Facturación</title>
  <!--CDN Font Awesome-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="../css/main.css">
</head>
<body>
  <header>
    <div class="restaurant"></div>
  </header>
  <article>
    <div class="sidebar">
      <ul class="upper">
        <li>
          <a class="side-a" href="#">
            <div class="side-icon">
              <i class="fa-solid fa-chart-line"></i>
            </div>
            Ventas
          </a>
        </li>
        <li>
          <a class="side-a" href="/pedidos0_mozo">
            <div class="side-icon">
              <i class="fa-solid fa-sheet-plastic"></i>
            </div>
            Pedidos
          </a>
        </li>
        <li>
          <a class="side-a" href="#">
            <div class="side-icon">
              <i class="fa-solid fa-cart-shopping"></i>
            </div>
            Productos
          </a>
        </li>
        <li>
          <a class="side-a" href="#">
            <div class="side-icon">
              <i class="fa-solid fa-plus"></i>
            </div>
            Otra más
          </a>
        </li>
      </ul>
      <ul class="lower">
        <li>
          <a class="side-a" href="#">
            <div class="side-icon">
              <i class="fa-solid fa-gear"></i>
            </div>
            Configuración
          </a>
        </li>
        <li>
          <a class="side-a" href="/logout">
            <div class="side-icon">
              <i class="fa-solid fa-right-from-bracket"></i>
            </div>
            Cerrar Sesión
          </a>
        </li>
      </ul>
    </div>
    <div class="content">
      <h2>Pedidos por Mesa</h2>
      <table class="table">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Precio Unitario</th>
                <th>Cantidad</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
          <% pedidos.forEach(pedido => { %>
              <tr class="pedido-row" data-mesa-id="<%= pedido.mesa_id %>">
                  <td><%= pedido.nombre %></td>
                  <td><%= pedido.precio %></td>
                  <td><%= pedido.cantidad %></td>
                  <td><%= pedido.precio_total %></td>
              </tr>
          <% }) %>
        </tbody>
      </table>
      <h2>Total del Pedido: S/. <span id="total_factura"><%= totalPedido %></span></h2>
      <button class="facturar-btn" onclick="generarFactura()">Generar Factura</button>
    </div>
  </article>

  <script>

    function generarFactura() {
      if (confirm("¿Deseas generar la factura?")) {
        alert('Factura generada por un total de: S/. ' + document.getElementById('total_factura').textContent);
      }
    }

    // Mostrar la primera mesa y calcular el total al cargar la página
    document.addEventListener('DOMContentLoaded', () => {
      document.getElementById('mesa-select').selectedIndex = 0;
      cambiarMesa();
    });
  </script>
</body>
</html>
